{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/*"],
      "@paraglide/*": ["./src/paraglide/*"]
    },
    "strictNullChecks": true
  },
  "exclude": ["src/paraglide", "node_modules/", "dist"],
  "include": ["src", "astro.config.mjs", "**/*", ".astro/types.d.ts"],
  "extends": ["astro/tsconfigs/strict"]
}
